doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/css/style.css')
        link(rel='stylesheet', href='https://cdn.bootcdn.net/ajax/libs/Halfmoon/1.1.1/css/halfmoon.css')
        link(rel='stylesheet', href='https://cdn.bootcdn.net/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        meta(charset="UTF-8")
        script(type='text/javascript', src='https://cdn.bootcdn.net/ajax/libs/jquery/3.6.0/jquery.js')
        script(type='text/javascript', src='https://cdn.bootcdn.net/ajax/libs/jsencrypt/3.2.1/jsencrypt.min.js')
        script(type="text/javascript", src='https://cdn.bootcdn.net/ajax/libs/Halfmoon/1.1.1/js/halfmoon.js')
    body
        div.page-wrapper.with-navbar.with-sidebar.with-navbar-fixed-bottom.with-custom-webkit-scrollbars.with-custom-css-scrollbars(data-sidebar-hidden='hidden' data-sidebar-type="overlayed-sm-and-down")
            div.sticky-alerts
            div.sidebar-overlay(onclick="halfmoon.toggleSidebar()")
            nav.navbar
                div.navbar-content
                    button.btn.btn-action(type="button", onclick="halfmoon.toggleSidebar()")
                        i.fa.fa-bars(aria-hidden=true)
                        span.sr-only Toggle sidebar
                a.navbar-brand TEST
                span.navbar-text.text-monospace.badge v0.0.1
                div.navbar-content.ml-auto
                    button.btn.btn-action.mr-auto(type="button", onclick='window.open("https://github.com/heartalborada-del/account-system-node")')
                        i.fa.fa-github(aria-hidden=true)
                        span.sr-only Go to Github
                    button.btn.btn-action.ml-5(type="button", onclick='halfmoon.toggleDarkMode()')
                        i.fa.fa-moon-o(aria-hidden=true)
                        span.sr-only Toggle dark mode
            div.sidebar
                a.sidebar-link.sidebar-link-with-icon(href='/')
                    span.sidebar-icon
                        i.fa.fa-home
                    | Index
                h5.sidebar-title.sidebar-link-with-icon
                    span.sidebar-icon
                        i.fa.fa-sign-in
                    | Account
                div.sidebar-divider
                div(style='margin: 0.5rem 2.5rem')
                    a.sidebar-link(href='/login') Login
                    a.sidebar-link(href='/register') Register
                    a.sidebar-link(href='/my') My
                if permission === 1
                    h5.sidebar-title.sidebar-link-with-icon
                        span.sidebar-icon
                            i.fa.fa-sign-in
                        | Manager
                    div.sidebar-divider
                    div(style='margin: 0.5rem 2.5rem')
                        a.sidebar-link(href='/admin') Manager
            div.content-wrapper
                div.container-fluid
                    div.content
                        block content
            div.navbar.navbar-fixed-bottom
                span.navbar-text &copy; Copyright 2022, Heartalborada
        script(type='text/javascript', src='/js/main.js')
