extends ../layout

block content
    div.mw-full
            div.card.p-0
                div.px-card.border-bottom.py-10
                    h2.card-title.font-size-18.m-0= msg
                div.content
                    h3(id='show', style='text-align: center;') Jump after #{time} seconds
                    button.btn.btn-primary.btn-block.btn-rounded(id='bt', type='button', style='margin-bottom: 10px;', onclick='window.location.href=\''+url+'\'') Click me to go to #{name} page
                    div.progress
                        div.bg-success.progress-bar.progress-bar-animated(id='pg', role="progressbar", style="width: 0%")
            script(type='text/javascript' src='/js/jump.js')
            script(type='text/javascript') jump('#{url}', #{time}, "#{message}", false);