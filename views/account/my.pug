extends ../layout

block content
    div.mw-full
        div.card.p-0
            div.px-card.border-bottom.py-10
                h2.card-title.font-size-18.m-0 Welcome
            div.content
                div.d-flex.flex-wrap
                    div.alert.alert-success.m-auto
                        p 欢迎回来, UUID为
                            code.code #{UUID}
                            | 的用户
                        p 你的邮箱为
                            code.code #{email}
                            | 目前邮箱验证状态为
                            if verify
                                code.code Verified
                            else
                                code.code Unverified
                    div.alert.alert-primary.mt-m892-as.mx-auto.mb-auto
                        h4.alert-heading.text-center Your avatar
                        img.img-fluid.rounded.h-150.w-150(src="/api/avatar/get")
                if !verify
                    div.border-top.mt-20
                        div.alert.alert-danger.mt-20.filled.w-400.m-auto
                            p 没有收到邮件? 点击按钮重新发送邮件
                            form.verifyForm(onsubmit='return false')
                                div.form-group.input-group
                                    div.input-group-prepend
                                        span.input-group-text
                                            i.fa.fa-lock(aria-hidden=true)
                                        input.form-control.captchaInput(
                                            name='captcha', type='text',
                                            placeholder='Captcha', required='required',
                                            oninput='this.value=this.value.substr(0,4).replace(/[\u4e00-\u9fa5]/,"")'
                                        )
                                        div.input-group-prepend
                                            img.captcha.border-right.rounded-right(src='/api/captcha')
                                button.btn.btn-secondary.btn-block(id='reSendEmail') 重新发送邮件
                            script(type="text/javascript", src='/js/verifyEmail.js')
                            script(type="text/javascript", src='/js/captcha.js')
    if verify
        div.mw-full
            div.card.p-0
                div.px-card.border-bottom.py-10
                    h2.card-title.font-size-18.m-0 Settings
                div.content
                    h3.card-title.font-size-16.m-0.text-center.border-bottom.pb-10 Avatar
                    div.card.bg-very-dark.d-flex.flex-wrap
                        div.custom-file.text-center.alert.alert-primary.m-auto
                            form.avatarInput(onsubmit='return false')
                                div.form-group.mb-10
                                    input(type="file", id="picture", required="required", accept='image/png, image/bmp, image/jpg')
                                    label(for="picture") Choose a picture
                                button.btn.btn-block.btn-primary(id='upload_avatar') 上传头像
                        div.custom-file.text-center.alert.alert-primary.mt-m892-as.mx-auto.mb-auto
                            h4.alert-heading.text-center Preview your new avatar
                            img.img-fluid.rounded.h-150.w-150.avatarShow(src="data:image/png;base64,")
                        script(src="/js/uploadAvatar.js")
