extends ../layout

block content
    div.w-400.mw-full.mid
        div.card.p-0
            div.px-card.py-10.border-bottom
                h2.card-title.font-size-18.m-0 Register
            div.content
                form.loginForm(onsubmit='return false')
                    div.form-group.input-group
                        div.input-group-prepend
                            span.input-group-text
                                i.fa.fa-envelope-o(aria-hidden=true)
                        input.form-control(name='email', type='email', placeholder='Your email', required='required')
                    div.form-group.input-group
                        div.input-group-prepend
                            span.input-group-text
                                i.fa.fa-key(aria-hidden=true)
                        input.form-control(name='password', id='password', type='password', placeholder='Your password', required='required')
                    div.form-group.input-group
                        div.input-group-prepend
                            span.input-group-text
                                i.fa.fa-key(aria-hidden=true)
                        input.form-control(name='password_again', id='password_again', type='password', placeholder='Your password', required='required')
                    div.form-group.input-group
                        div.input-group-prepend
                            span.input-group-text
                                i.fa.fa-lock(aria-hidden=true)
                            input.form-control.captchaInput(
                                name='captcha', type='text',
                                placeholder='Captcha', required='required',
                                oninput='this.value=this.value.substr(0,4).replace(/[\u4e00-\u9fa5]/,"")'
                            )
                            div.input-group-prepend
                                img.captcha.border-right.rounded-right(src='/api/captcha')
                    button.btn.btn-primary.btn-block Register
    script(type="text/javascript", src='/js/register.js')
    script(type="text/javascript", src='/js/captcha.js')